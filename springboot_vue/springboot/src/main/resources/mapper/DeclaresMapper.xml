<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ak.springboot.mapper.DeclaresMapper">
    <update id="update" parameterType="com.ak.springboot.entity.Declares">
        update declare
        <set>
            <if test="name!=null">
                name=#{name},
            </if>
            <if test="phone!=null">
                phone=#{phone},
            </if>
            <if test="sex!=null">
                sex=#{sex},
            </if>
            <if test="state!=null">
                state=#{state},
            </if>
            <if test="nativePlace!=null">
                nativePlace=#{nativePlace},
            </if>
            <if test="address!=null">
                address=#{address}
            </if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>
</mapper>
